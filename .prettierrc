{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.{js,jsx,ts,tsx}",
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": "*.{py}",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.{md,yml,yaml,json}",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}